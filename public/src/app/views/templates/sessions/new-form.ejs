<form role="form">
  <%- render('shared/form-error-messages', { errorMessages: errorMessages }) %>
  <div class="form-group">
    <input type="email" name="email" placeholder="Email" value="<%= (locals.email) ? email : '' %>" required="required" class="form-control" />
  </div>
  <div class="form-group">
    <input type="password" name="password" placeholder="Password" value="<%= (locals.password) ? password : '' %>" required="required" class="form-control" />
  </div>
  <button type="submit" data-action="sign-in" class="btn btn-default">Submit</button>
  <div class="small inline loader"></div>
</form>